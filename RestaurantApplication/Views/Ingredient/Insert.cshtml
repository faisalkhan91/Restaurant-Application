@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantApplication.Models.Ingredient;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Insert Ingredients";
}

<form asp-controller="Ingredient" asp-action="Insert" method="post" class="mt-3">
    <div>
        <div class="form-group row">
            <label asp-for="Name" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="text" asp-for="Name" class=" form-control" placeholder="Eg: Lettuce, Tomato">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="email" asp-for="Quantity" class=" form-control" placeholder="Eg: 1, 2">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Insert</button>
    </div>
</form>