@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<RestaurantApplication.Models.Ingredient>

<h3>Ingredient Items</h3>
<br />

<div class="card-deck">

    @foreach (var item in Model)
    {
        <div class="card m-3">
            <img class="card-img-top" src="~/image/event.jpg" />
            <div class="card-header">
                <h4>@item.Name</h4>
                <h5>@item.Quantity</h5>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Ingredient" asp-action="Insert" asp-route-id="" class="btn btn-primary">Insert</a>
            </div>
        </div>
    }
</div>