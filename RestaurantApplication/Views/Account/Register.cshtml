@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantApplication.Models.User;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create New User";
}

<form asp-controller="Account" asp-action="Register" method="post" class="mt-3">
    <div>
        <div class="form-group row">
            <label asp-for="FullName" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="text" asp-for="FullName" class=" form-control" placeholder="Please Enter your full name." required>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Email" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="email" asp-for="Email" class=" form-control" placeholder="Enter your email." required>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Password" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="password" asp-for="Password" class=" form-control" placeholder="Enter your password." required>
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="ConfirmPassword" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="password" asp-for="ConfirmPassword" class=" form-control" placeholder="Confirm Password" required>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Create</button>
    </div>
</form>