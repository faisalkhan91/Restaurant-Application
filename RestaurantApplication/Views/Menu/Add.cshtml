@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantApplication.Models.Menu;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Add Menu Items";
}

<form asp-controller="Menu" asp-action="Add" method="post" class="mt-3">
    <div>
        <div class="form-group row">
            <label asp-for="ItemName" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="text" asp-for="ItemName" class=" form-control" placeholder="Eg: Burger, Soup">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Price" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="email" asp-for="Price" class=" form-control" placeholder="Eg: $5.10">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Description" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="password" asp-for="Description" class=" form-control" placeholder="Eg: Yummy food">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Add</button>
    </div>
</form>