@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantApplication.Models.Order;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Order";
}

<form asp-controller="Order" asp-action="Create" method="post" class="mt-3">
    <div>
        @*<div class="form-group row">
            <label asp-for="MenuId" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="text" asp-for="MenuId" class=" form-control" placeholder="Eg: Burger, Soup">
            </div>
        </div>*@

        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="number" asp-for="Quantity" class=" form-control" placeholder="Eg: 1, 2">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="OrderPlaced" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="datetime" asp-for="OrderPlaced" class=" form-control" placeholder="Eg: MM/DD/YY">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Status" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <select asp-for="Status" asp-items="Html.GetEnumSelectList<StatusType>()">
                    <option selected="selected" value="">Please select</option>
                </select>
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
        <a asp-controller="Order" asp-action="Display" asp-route-id="" class="btn btn-primary">View All Orders</a>
    </div>
</form>
