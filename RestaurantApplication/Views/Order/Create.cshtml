@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model RestaurantApplication.Models.Order;

@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Create Order";
}

<form asp-controller="Order" asp-action="Create" method="post" class="mt-3">
    <div>
        <div class="form-group row">
            <label asp-for="Menu.ItemName" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="text" asp-for="Menu.ItemName" class=" form-control" placeholder="Eg: Burger, Soup">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="Quantity" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="email" asp-for="Quantity" class=" form-control" placeholder="Eg: 1, 2">
            </div>
        </div>

        <div class="form-group row">
            <label asp-for="OrderPlaced" class="col-sm-2 col-form-label"></label>
            <div class=" col-sm-10">
                <input type="password" asp-for="OrderPlaced" class=" form-control" placeholder="Eg: MM/DD/YY">
            </div>
        </div>

        <button type="submit" class="btn btn-primary">Place Order</button>
    </div>
</form>
