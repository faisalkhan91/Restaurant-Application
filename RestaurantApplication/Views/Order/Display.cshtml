@{
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<RestaurantApplication.Models.Order>

<h3>All Active Orders</h3>
<br />

<div class="card-deck">

    @foreach (var item in Model)
    {
        <div class="card m-3">
            <img class="card-img-top" src="~/image/event.jpg" />
            <div class="card-header">
                <h5>Order ID: @item.OrderId</h5>
                <h5>Menu Item: @item.MenuId</h5>
                <h5>Quantity: @item.Quantity</h5>
                <h5>Order Time: @item.OrderPlaced</h5>
                <h5>Order Status: @item.Status</h5>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="Order" asp-action="Change" asp-route-id="@item.OrderId" class="btn btn-primary">Change Status</a>
            </div>
        </div>
    }
</div>
