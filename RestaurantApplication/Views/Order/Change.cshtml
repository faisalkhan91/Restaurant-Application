@model RestaurantApplication.Models.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = "Change status";
}

@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers

    <form class="form-inline" action="displayOrders">
        @*<div class="form-group">*@
            @*<label for="Order">Order Id:</label>*@
            <h3>Id : @Model.OrderId</h3>
            <h3>Date/Time: @Model.Status</h3>
        @*</div>*@



        <div class="dropdown">
            
                <label asp-for="@Model.Status" class="col-md-2 control-label"></label>
                <div class="col-md-10">
                    <select asp-for="@Model.Status" asp-items="Html.GetEnumSelectList<StatusType>()">
                        <option selected="selected" value="">Please select</option>
                    </select>
                    <span asp-validation-for="@Model.Status" class="text-danger" />
                </div>

        </div>

        <button type="submit" class="btn btn-default">Submit</button>
    </form>

}